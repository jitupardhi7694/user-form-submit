<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="register-body">
                <div class="text-center mx-auto">

                    <h4><i class="fa-sharp fa-solid fa-pen-to-square"></i> <strong>Register User </strong></h4>

                </div>
                <div class="col-md-4 mx-auto mt-4 ">
                    <form action="" method="post">
                        <div class="mb-3">
                            <input type="hidden" name="id">

                            <input type="text" class="form-control  border rounded-pill" name="name"
                                placeholder="Your Name" required>
                        </div>
                        <div class="mb-3">

                            <input type="email" class="form-control  border rounded-pill" name="email" required
                                placeholder="Email">
                        </div>
                        <div class="mb-3">
                            <input type="number" class="form-control  border rounded-pill" name="number" required
                                placeholder="Number">
                        </div>
                        <div class="mb-3">

                            <input type="date" class="form-control  border rounded-pill" name="dob" required
                                placeholder="Date Of Birth">
                        </div>
                        <div class="flex mt-4 text-center">
                            <button type="submit" class="btn btn-outline-success text-white mr-4"> Submit</button>
                            <button type="reset" class="btn btn-outline-success text-white mr-4"> Cancel</button>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>